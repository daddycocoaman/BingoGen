{
    "$schema": "http://json.schemastore.org/proxies",
    "proxies": {
      "Conference redir": {

        "matchCondition": {
          "route": "/conference",
          "methods": [
            "GET"
          ]
        },
        "backendUri": "https://localhost/card?type=conference"
      },
      "Replystorm redir": {

        "matchCondition": {
          "route": "/replystorm",
          "methods": [
            "GET"
          ]
        },
        "backendUri": "https://localhost/card?type=replystorm"
      },
      "Root redir": {

        "matchCondition": {
          "route": "/",
          "methods": [
            "GET"
          ]
        },
        "backendUri": "https://localhost/index"
      }
    }
  }